{
  "compilerOptions": {
    "target": "ESNext", // Allows for more modern JavaScript features
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext", // Align with ESNext module system
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Do not emit compiled files
    "jsx": "react-jsx" // Use "react-jsx" for React 17+ with JSX transformation
  },
  "include": ["src"] // Include all files in the src directory
}
